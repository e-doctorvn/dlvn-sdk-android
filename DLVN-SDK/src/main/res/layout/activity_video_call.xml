<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/video_call_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.sendbird.calls.SendBirdVideoView
        android:id="@+id/remote_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/avatar_as_bg"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/local_video_container"
        android:layout_width="158dp"
        android:layout_height="158dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="202dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:clipChildren="true"
        android:clipToOutline="true">
        <com.sendbird.calls.SendBirdVideoView
            android:id="@+id/local_video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToOutline="true"
            android:backgroundTint="@android:color/transparent"
            android:background="@drawable/corner_background"/>
        <ImageButton
            android:id="@+id/btn_rotate_cam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="14dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_switch_cam"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_call_container"
        android:orientation="vertical"
        android:layout_marginHorizontal="5dp"
        android:paddingVertical="16dp"
        android:paddingHorizontal="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/corner_background">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_doctor_avatar"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:cropToPadding="true"
                android:backgroundTint="@color/black"
                android:background="@drawable/bg_circle"
                />
            <LinearLayout
                android:layout_marginStart="9dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.flexbox.FlexboxLayout
                    app:flexDirection="row"
                    app:alignItems="center"
                    app:justifyContent="space_between"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="BS Danh Mai"
                        android:textSize="18sp"
                        android:lineHeight="24sp"
                        android:textStyle="bold"
                        android:maxWidth="200dp"
                        android:lineBreakStyle="none"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:id="@+id/tv_doctor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <FrameLayout
                        android:layout_width="63dp"
                        android:layout_height="28dp"
                        android:paddingVertical="4dp"
                        android:paddingHorizontal="12dp"
                        android:backgroundTint="@color/daiichi_secondary"
                        android:background="@drawable/corner_background">
                        <TextView
                            android:id="@+id/tv_call_timeout"
                            android:textSize="14sp"
                            android:lineHeight="16sp"
                            android:textStyle="bold"
                            android:text="14:23"
                            android:textColor="@color/red_primary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </FrameLayout>
                </com.google.android.flexbox.FlexboxLayout>
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:lineHeight="18sp"
                    android:textStyle="bold"
                    android:id="@+id/tv_callee_name"
                    android:textColor="@color/gray_primary"
                    android:lineBreakStyle="none"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bui Dinh Manh (Toi)"/>
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:lineHeight="18sp"
                    android:lineBreakStyle="none"
                    android:textColor="@color/gray_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phong kham da khoa eDoctor"/>
            </LinearLayout>
        </LinearLayout>

        <com.google.android.flexbox.FlexboxLayout
            app:alignItems="center"
            app:flexDirection="row"
            android:layout_marginTop="20dp"
            app:justifyContent="space_between"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn_open_chat"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_chat"
                android:hapticFeedbackEnabled="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <ProgressBar
                android:id="@+id/wv_chat_loading"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageButton
                android:id="@+id/btn_toggle_mic"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_mic_atv"
                android:hapticFeedbackEnabled="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <ImageButton
                android:id="@+id/btn_toggle_cam"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_cam_atv"
                android:hapticFeedbackEnabled="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <ImageButton
                android:id="@+id/btn_audio_devices"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_chat"
                android:hapticFeedbackEnabled="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <ImageButton
                android:id="@+id/btn_end_call"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_reject_call"
                android:hapticFeedbackEnabled="true"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </com.google.android.flexbox.FlexboxLayout>
    </LinearLayout>
</RelativeLayout>