<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:layout_width="343dp"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_background">
    <LinearLayout
        android:padding="8dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="RtlHardcoded"
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/btn_close_confirm_dialog"
        android:foreground="?attr/selectableItemBackground"
        android:backgroundTint="@color/white"
        android:background="@drawable/corner_background_100">
        <ImageView
            android:src="@drawable/ic_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:contentDescription="icon_close"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <ImageView
        android:src="@drawable/ic_cancel_appointment"
        android:layout_width="287dp"
        android:layout_height="92dp"
        android:contentDescription="cancel_icon"
        tools:ignore="HardcodedText" />
    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="32dp"
        android:text="Bạn có chắc huỷ hẹn?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
    <TextView
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="Lịch tư vấn sẽ bị huỷ và phí tư vấn\n   sẽ không được hoàn lại."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
    <androidx.appcompat.widget.AppCompatButton
        android:text="Không"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:clickable="true"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:id="@+id/btn_dismiss_cancel_dialog_wg"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/home_widget_pst_button_bg"
        android:focusable="true"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/btn_confirm_cancel_appointment_wg"
        android:textStyle="bold"
        android:text="Huỷ hẹn"
        android:textSize="15sp"
        android:textColor="@color/brown_primary"
        android:paddingHorizontal="56dp"
        android:textAlignment="center"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"/>
</LinearLayout>