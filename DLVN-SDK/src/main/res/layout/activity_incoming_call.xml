<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/bg_incoming"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:alpha="0.5"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:alpha="0.25"
        android:id="@+id/bg_color_incoming"
        android:background="@color/green"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />
    <!-- Avatar người gọi -->
    <FrameLayout
        android:id="@+id/avatar_cover"
        android:layout_marginTop="95dp"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_circle" />
    <ImageView
        android:layout_marginTop="100dp"
        android:id="@+id/img_caller_avatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_default_avatar"
        android:background="@drawable/bg_circle"
        android:cropToPadding="true"
        android:clipToOutline="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/caller_info_layout"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/img_caller_avatar">
        <TextView
            android:id="@+id/tv_caller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BS.Huỳnh Mai gọi video "
            android:textColor="@color/red_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:lineHeight="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:lineHeight="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/tv_timeout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="59s"
            android:layout_marginTop="36dp"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:lineHeight="36dp"
            android:textFontWeight="700"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:layout_below="@+id/caller_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Nút từ chối cuộc gọi -->
            <ImageButton
                android:hapticFeedbackEnabled="true"
                android:id="@+id/btn_reject_call"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_reject_call"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="4dp" />

            <ImageButton
                android:id="@+id/btn_answer_call"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="100dp"
                android:src="@drawable/ic_accept_call"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="4dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="48dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <ImageButton
                android:id="@+id/btn_toggle_mic_incoming"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_mic_atv"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <ImageButton
                android:id="@+id/btn_toggle_cam_incoming"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_cam_atv"
                android:layout_marginLeft="28dp"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>